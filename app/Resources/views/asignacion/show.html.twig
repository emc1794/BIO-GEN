{% extends 'base.html.twig' %}

{% block stylesheets %}
<style>
    @media print{
        tr.noPrint{
            display: none !important;
        }
    }
</style>
{% endblock %}
{% block page_content %}
<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
          <h2><b>Asignacion de  Artefacto electronico </b><small>Ver</small></h2>
          <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-xs-12">
                    <table class="table table-striped table-bordered">
                        <tbody>
                        <tr>
                            <th>Nº</th>
                            <td><b>{{asignacion.detalleSolicitud.id}}</b></td>
                            <th>Nº Orden</th>
                            <td>{{asignacion.detalleSolicitud.solicitud.id}}</td>
                        </tr>
                        <tr>
                            <th>Fecha de asignacion</th>
                            <td>{{asignacion.fechaRegistroString}}</td>
                            <th>Fecha plazo</th>
                            <td>{{asignacion.fechaPlazoString}}</td>
                        </tr>
                        <tr>
                            <th>Tecnico Asignado</th>
                            <td colspan="3">{{asignacion.asignado.nombreCompleto}}</td>
                        </tr>
                        <tr>
                            <th>Tipo</th>
                            <td>{{asignacion.detalleSolicitud.artefacto.nombre}}</td>
                            <th>Descripcion</th>
                            <td >{{asignacion.detalleSolicitud.descripcion}}</td>
                        </tr>
                        <tr>
                            <th>Observacion del Problema</th>
                            <td colspan="3">{{asignacion.detalleSolicitud.observacion}}</td>
                        </tr>
                        <tr class="noPrint">
                            
                            <th>opciones</th>
                            <td colspan="3">
                                <a href="{{path('asignacion_edit',{id:asignacion.id})}}" class="btn btn-warning btn-xs"> <i class="fa fa-edit"> Editar</i></a>
                                <a onclick="window.print();" class="btn btn-default btn-xs"> <i class="fa fa-print"> Imprimir</i></a>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
