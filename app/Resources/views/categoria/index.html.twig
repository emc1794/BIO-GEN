{% extends 'base.html.twig' %}

{% block page_content %}
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2><b>Listado de categorias </b><small><a href="{{ path('categoria_new') }}"><i class="fa fa-plus" aria-hidden="true"></i> Crear nueva categoria</a></small></h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-xs-12">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Nombre</th>
                                    <th>Descripcion</th>
                                    <th>Opciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for categorium in categorias %}
                                    <tr>
                                        <td><a href="{{ path('categoria_show', { 'id': categorium.id }) }}">{{ categorium.id }}</a></td>
                                        <td>{{ categorium.nombre }}</td>
                                        <td>{{ categorium.descripcion }}</td>
                                        <td>
                                            {#<a href="{{ path('categoria_show', { 'id': categorium.id }) }}" class="btn btn-info btn-xs">Mostrar</a>#}
                                            <a href="{{ path('categoria_edit', { 'id': categorium.id }) }}" class="btn btn-warning btn-xs">Editar</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
