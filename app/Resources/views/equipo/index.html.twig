{% extends 'base.html.twig' %}

{% block page_content %}
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2><b>Listado de equipo </b><small><a href="{{ path('equipo_new') }}"><i class="fa fa-plus" aria-hidden="true"></i> Registrar nuevo equipo</a></small></h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-xs-12">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Nombre</th>
                                    <th>Representante</th>
                                    <th>Categoria</th>
                                    <th>Fecha de fundacion</th>
                                    <th>Opciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for equipo in equipos %}
                                    <tr>
                                        <td><a href="{{ path('equipo_show', { 'id': equipo.id }) }}">{{ equipo.id }}</a></td>
                                        <td>{{ equipo.nombre }}</td>
                                        <td>{{ equipo.representante.nombreCompleto }}</td>
                                        <td>{{equipo.categoria.nombre}}</td>
                                        <td>{% if equipo.fechaFundacion %}{{ equipo.fechaFundacion|date('d-m-Y') }}{% endif %}</td>
                                        <td>
                                            <a href="{{ path('equipo_show', { 'id': equipo.id }) }}" class="btn btn-info btn-xs">Mostrar</a>
                                            <a href="{{ path('equipo_edit', { 'id': equipo.id }) }}" class="btn btn-warning btn-xs">Editar</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
