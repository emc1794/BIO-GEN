{% extends 'base.html.twig' %}

{% block page_content %}
<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
          <h2><b>Solicitud de laboratorio </b><small>Ver</small></h2>
          <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-xs-12">
                    <table class="table table-striped table-bordered">
                        <tbody>
                        <tr>
                            <th>Nº</th>
                            <td><b>{{solicitud.id}}</b></td>
                            <th>Paciente</th>
                            <td>{{solicitud.paciente.nombreCompleto}}</td>
                        </tr>
                        <tr>
                            <th>Sexo</th>
                            <td><b>{{solicitud.paciente.sexoString}}</b></td>
                            <th>Fecha de Nac.</th>
                            <td>{{solicitud.paciente.fechaNacimientoString}}</td>
                        </tr>
                        <tr>
                            <th>Fecha de envio</th>
                            <td>{{solicitud.fechaEnvioString}}</td>
                            <th>Fecha de registro</th>
                            <td>{{solicitud.fechaRegistroString}}</td>
                        </tr>
                        <tr>
                            
                            <th>Observacion</th>
                            <td colspan="3">{{solicitud.observacion}}</td>
                        </tr>
                        <tr>
                            <th>Estado</th>
                            <td>{{solicitud.estadoString}}</td>
                            <th>opciones</th>
                            <td>
                                {% if solicitud.estado == 'B'%}
                                <a href="{{path('solicitud_enviar',{id:solicitud.id})}}" class="btn btn-default btn-xs"> <i class="fa fa-share-square-o"> Enviar</i></a>
                                <a href="{{path('solicitud_edit',{id:solicitud.id})}}" class="btn btn-warning btn-xs"> <i class="fa fa-edit"> Editar</i></a>
                                <a href="{{path('solicitud_delete',{id:solicitud.id})}}" class="btn btn-danger btn-xs"> <i class="fa fa-edit"> Eliminar</i></a>
                                {% endif %}
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <div class="col-lg-12 col-md-12 col-xs-12">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Nº</th>
                                <th>Laboratorio</th>
                                <th>Categoria</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for detalle in solicitud.solicitudDetalles %}
                        <tr>
                            <td>{{detalle.id}}</td>
                            <td>{{detalle.laboratorio.nombre}}</td>
                            <td>{{detalle.laboratorio.categoria.nombre}}</td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
