{% extends 'base.html.twig' %}

{% block page_content %}
    <h1>Solicitud</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ solicitud.id }}</td>
            </tr>
            <tr>
                <th>Nombrepaciente</th>
                <td>{{ solicitud.nombrePaciente }}</td>
            </tr>
            <tr>
                <th>Fecharegistro</th>
                <td>{% if solicitud.fechaRegistro %}{{ solicitud.fechaRegistro|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Fechaenvio</th>
                <td>{% if solicitud.fechaEnvio %}{{ solicitud.fechaEnvio|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{{ solicitud.estado }}</td>
            </tr>
            <tr>
                <th>Observacion</th>
                <td>{{ solicitud.observacion }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('solicitud_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('solicitud_edit', { 'id': solicitud.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
